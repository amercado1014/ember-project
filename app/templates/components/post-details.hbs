<div class="h-16 post">
  <h2 class="post-title" {{action "getUser" post.userId}} role="button">
    {{post.title}}
  </h2>
</div>
{{#if displayModal}}
  <div class="modal-wrapper">
    <div class="modal">
      <h4 class="text-blue my-4">Post Title:</h4>
      <h4>{{post.title}}</h4>
      <h4 class="text-blue my-4">Post Message:</h4>
      <p>{{post.body}}</p>
      <h4 class="text-blue my-4">Created By:</h4>
      <p>{{user.name}}</p>
      <h4 class="text-blue my-4">Username:</h4>
      <p>{{user.username}}</p>
      <h4 class="text-blue my-4">Email:</h4>
      <p>{{user.email}}</p>
      <span class="absolute pin-t pin-r p-1">
        <svg class="h-12 w-12 fill-current text-grey hover:text-grey-darkest" 
          role="button" 
          {{action "closeModal"}}
          xmlns="http://www.w3.org/2000/svg" 
          viewBox="0 0 20 20">
          <path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/>
        </svg>
      </span>
    </div>
  </div>
{{/if}}