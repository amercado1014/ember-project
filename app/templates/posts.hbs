<div class="flex flex-col items-center">
  <div class="text-center my-16">
    {{#each posts as |post|}}
      <h2>{{post.title}}</h2>
    {{/each}}
  </div>
  <div class="flex justify-between w-1/2">
    <button 
      class="btn-blue {{if isFirstPage "btn-disabled"}}"      
      disabled={{isFirstPage}}
      {{action "getPreviousPage"}} 
    >
      Previous Page
    </button>
    <button
      class="btn-blue {{if isLastPage "btn-disabled"}}"
      disabled={{isLastPage}}
      {{action "getNextPage"}} 
    >
      Next Page
    </button>
  </div>
</div>
